<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
	"mybatis-3-config.dtd">

<configuration>
	
	<typeAliases>
		<typeAlias type="model.domain.Team" alias="team"/>
		<typeAlias type="model.domain.Project" alias="project"/>
		<typeAlias type="model.domain.Member" alias="member"/>	
		<typeAlias type="model.domain.Aboard" alias="aBoard"/>
		<typeAlias type="model.domain.Bboard" alias="bBoard"/>
	</typeAliases>

	<environments default="env">			

		<environment id="env">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://890313.com:3306/seyoon?characterEncoding=UTF-8"/>
				<property name="username" value="seyoon" />
				<property name="password" value="qwer1234" />
			</dataSource>
		</environment>

	</environments>

	<mappers>
		<mapper resource="config/team.xml" />
		<mapper resource="config/project.xml" /> 
		<mapper resource="config/member.xml" />
		<mapper resource="config/aboard.xml" />
		<mapper resource="config/bboard.xml" />
	</mappers>

</configuration>

