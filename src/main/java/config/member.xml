<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
			
<mapper namespace="member">

	<resultMap type="model.domain.Member" id="memberMap">
		<result property="userId" column="user_id"/>
		<result property="pw" column="password"/>
		<result property="name" column="name"/>
	</resultMap>

	<select id="login" parameterType="member" resultMap="memberMap">
		select * from MEMBER where user_id = #{userId} and password = #{pw}
	</select>

	<insert id="insertMember" parameterType="member">
		insert into MEMBER values (#{userId},#{pw},#{name})
	</insert>
	
	<update id="updateMember" parameterType="member" >
		update MEMBER set name = #{name} where user_id = #{userId}
	</update>
	
	<select id="memberInfo" parameterType="member" resultMap="memberMap">
		select * from MEMBER where user_id = #{userId}
	</select>
	
	<delete id="deleteMember" parameterType="int" >
		delete from MEMBER where user_id = #{userId} 
	</delete>
	
	<select id="memberList" resultMap="memberMap">
		select * from MEMBER
	</select>
	
	<select id="loginCheck" parameterType="member" resultMap="memberMap">
		select * from MEMBER where user_id = #{userId}
	</select>
	
</mapper>